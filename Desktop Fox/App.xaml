<Application x:Class="Desktop_Fox.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Desktop_Fox"
             xmlns:views="clr-namespace:Desktop_Fox.MVVM.Views"
             ShutdownMode="OnMainWindowClose" StartupUri="/Desktopfox.xaml">
             
    <Application.Resources>
        <Color x:Key="Color_Background">#FF2C394A</Color>
        <Color x:Key="Color_Border">DarkGray</Color>
        <Color x:Key="Color_Control">#FF4C77D7</Color>
        <Color x:Key="Color_Text">White</Color>
        <FontFamily x:Key="Default">Assets/#Nunito</FontFamily>
        <SolidColorBrush x:Key="BackgroundBrush">#FF2C394A</SolidColorBrush>
        <SolidColorBrush x:Key="BorderBrush">DarkGray</SolidColorBrush>
        
        <ResourceDictionary x:Key="Dic">
            <ResourceDictionary.MergedDictionaries>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <DataTemplate DataType="{x:Type views:PictureView}">
            <views:PictureView/>
        </DataTemplate>
    </Application.Resources>

</Application>
