<Window x:Class="Desktop_Fox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop_Fox"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip"
        Title="MainWindow" Height="450" Width="800">
    <Border Height="400" Width="700" Background="{StaticResource BackgroundBrush}">
        <Grid>
            <StackPanel>
                <Button Content="New Window" Margin="20" Click="Button_Click"/>
                <Button Content="Click 1" Margin="20" Click="Button_Click_1"/>
                <Button Content="Click 2" Margin="20" Click="Button_Click_2"/>
                <Image x:Name="pImage" Width="300" Height="180"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
