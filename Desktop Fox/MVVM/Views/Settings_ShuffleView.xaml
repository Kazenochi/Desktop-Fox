<UserControl x:Class="DesktopFox.MVVM.Views.Settings_ShuffleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopFox.MVVM.Views"
             xmlns:viewModels="clr-namespace:DesktopFox.MVVM.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewModels:SettingsVM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Storyboard x:Key="ConfirmationLight">
            <ColorAnimation To="LightGreen" 
                            Storyboard.TargetProperty="(Border.Background).Color" 
                            Storyboard.TargetName="border1"
                            From="#FF347FE6"
                            AutoReverse="True"
                            Duration="0:0:0.5"/>
        </Storyboard>
    </UserControl.Resources>
    <Border Background="#FF2C394A"
            CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock FontFamily="/Assets/#Nunito"
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center">
                    Linear presentation or shuffle the pictuers
            </TextBlock>
            <StackPanel Orientation="Horizontal" 
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Margin="0,5,0,0">
                <RadioButton x:Name="radio_Shuffle_False"
                             Content="Linear" 
                             FontSize="20"          
                             Margin="5,5,5,5"
                             Style="{StaticResource DF_RadioButton_Border}"/>
                <RadioButton x:Name="radio_Shuffle_True"
                             Content="Shuffle" 
                             FontSize="20"
                             Margin="5,5,5,5"
                             Style="{StaticResource DF_RadioButton_Border}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" 
                        Grid.Row="3"
                        HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock FontFamily="/Assets/#Nunito"
                           Foreground="White"
                           FontSize="20"
                           VerticalAlignment="Center">
                    Intervall time
                </TextBlock>

                <Border Height="30" Width="70" 
                        Background="#FF347FE6" 
                        CornerRadius="15"
                        Margin="10,0,10,0"
                        x:Name="border1">
                    <TextBox x:Name="shuffleTime"
                             MaxLength="3"
                             Foreground="White"
                             FontSize="20"
                             VerticalAlignment="Center"
                             Background="Transparent"
                             BorderBrush="Transparent"
                             TextAlignment="Center"
                             Margin="10,1,10,1"/>
                </Border>

                <TextBlock FontFamily="/Assets/#Nunito"
                           Foreground="White"
                           FontSize="20"
                           VerticalAlignment="Center">
                    Min
                </TextBlock>
                <Button Content="Save"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Margin="30,0,0,0"
                        FontSize="20"
                        Style="{StaticResource DF_Button_Border}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
