<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--Beispiel stammt von Payload. https://www.youtube.com/watch?v=PzP8mw7JUzI. Code wurde nur leicht verändert-->
    <Style TargetType="{x:Type TextBox}"
       x:Key="DF_TextboxInput">
        <Setter Property="FontFamily" Value="/Assets/#Nunito"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <TextBox Text="{TemplateBinding Text}"
                             Foreground="{TemplateBinding Foreground}"
                             FontSize="20"
                             VerticalAlignment="Center"
                             Background="Transparent"
                             BorderBrush="Transparent"
                             TextAlignment="Center"
                             Margin="10,1,10,1"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Background" Value="#FF68799A"/>
        <Style.Triggers>
            <Trigger Property="IsMouseCaptured" Value="True">
                <Setter Property="Background" Value="Aqua"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>