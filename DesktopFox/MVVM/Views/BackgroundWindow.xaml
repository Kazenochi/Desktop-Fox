<Window x:Class="DesktopFox.MVVM.Views.BackgroundWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:DesktopFox.MVVM.Views"
        xmlns:local="clr-namespace:DesktopFox"
        xmlns:ViewModels="clr-namespace:DesktopFox.MVVM.ViewModels" 
        mc:Ignorable="d"
        Title="BackgroundWindow"
        Background="Transparent"
        d:DataContext="{d:DesignInstance Type=ViewModels:BackgroundWindowVM}"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        WindowStyle="None">
    <Grid>
        <ContentControl Content="{Binding BackgroundModel.Wallpaper}"/>
    </Grid>
</Window>
